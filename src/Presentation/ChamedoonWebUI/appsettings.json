{
  "Logging": {
    "LogLevel": {
      "Default": "Warning", 
      "Microsoft.AspNetCore": "Error"
    }
  },
  "ConnectionStrings": {
    "ChamedoonConnection": "Server = .; Initial Catalog= Chamedoon_Db; Integrated Security =True; TrustServerCertificate=True"
  },
  "Smtp": {
    "Host": "mail.chamedonn.ir",
    "Port": 587,
    "EnableSsl": true,
    "User": "info@chamedonn.ir",
    "Password": "YOUR_STRONG_PASSWORD",
    "From": "info@chamedonn.ir"
  },
  "Urls": {
    "AppUrl": "https://localhost:7254"
  },
  "PaymentGateway": {
    "MerchantId": "zibal",
    "BaseUrl": "https://gateway.zibal.ir/v1",
    "StartUrl": "https://gateway.zibal.ir/start",
    "CallbackPath": "/payment/callback",
    "AmountMultiplier": 10
  },
  "Subscription": {
    "Plans": [
      {
        "Id": "starter",
        "OriginalPrice": 120000,
        "Price": 37000
      },
      {
        "Id": "unlimited",
        "OriginalPrice": 170000,
        "Price": 49000
      },
      {
        "Id": "ai_pro",
        "OriginalPrice": 220000,
        "Price": 62000
      }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {

          "tableName": "Log",
          "autoCreateSqlTable": true,
          "commandTimeout": 30,
          "columnOptionsSection": {
            "disableDefaults": true,
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "customColumns": [
              {
                "ColumnName": "MethodName",
                "DataType": "nvarchar",
                "DataLength": 250
              }
            ]
          }
        }
      }
    ]
  }
}
