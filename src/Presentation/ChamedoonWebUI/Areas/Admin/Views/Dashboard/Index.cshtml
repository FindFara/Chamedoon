@model DashboardViewModel
@using System.Linq
@using System.Text.Json
@using System.Text.Encodings.Web
@using Chamedoon.Domin.Enums
@{
    ViewData["Title"] = "داشبورد";
    var maxMonthly = Model.MonthlyRegistrations.Any() ? Model.MonthlyRegistrations.Max(item => item.Count) : 0;
    var maxSubscriptions = Model.MonthlyActiveSubscriptions.Any() ? Model.MonthlyActiveSubscriptions.Max(item => item.Count) : 0;
    string ProgressWidth(int count, int max) => max == 0 ? "0%" : $"{Math.Round(count * 100d / max)}%";
    string PaymentStatusClass(PaymentStatus status) => status switch
    {
        PaymentStatus.Paid => "badge-success",
        PaymentStatus.Pending => "badge-warning",
        PaymentStatus.Redirected => "badge-warning",
        PaymentStatus.Failed => "badge-danger",
        PaymentStatus.Cancelled => "badge-danger",
        _ => "badge-primary"
    };

    var jsonOptions = new JsonSerializerOptions
    {
        Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping
    };

    var dailyLabels = Model.DailyRegistrationsLast30Days.Select(item => item.DateLabel).ToList();
    var dailyRegistrationValues = Model.DailyRegistrationsLast30Days.Select(item => item.Count).ToList();
    var dailySubscriptionValues = Model.DailyPaidSubscriptionsLast30Days.Select(item => item.Count).ToList();

    var dailySubscriptionPlanLabels = Model.DailySubscriptionPlanPurchases.Select(item => item.PlanTitle).ToList();
    var dailySubscriptionPlanCounts = Model.DailySubscriptionPlanPurchases.Select(item => item.Count).ToList();
    var monthlySubscriptionPlanLabels = Model.MonthlySubscriptionPlanPurchases.Select(item => item.PlanTitle).ToList();
    var monthlySubscriptionPlanCounts = Model.MonthlySubscriptionPlanPurchases.Select(item => item.Count).ToList();

    var monthlyLabels = Model.MonthlyRegistrations.Select(item => item.Month).ToList();
    var monthlyRegistrationValues = Model.MonthlyRegistrations.Select(item => item.Count).ToList();
    var monthlySubscriptionValues = Model.MonthlyActiveSubscriptions.Select(item => item.Count).ToList();
}


<section class="stat-grid">
    <div class="stat-card">
        <div class="stat-title">کل کاربران</div>
        <div class="stat-value">@Model.TotalUsers.ToString("N0")</div>
        <span class="stat-badge badge-primary">+@Model.NewUsersThisMonth.ToString("N0") این ماه</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">کاربرانی که اشتراک خریدن</div>
        <div class="stat-value">@Model.ActiveUsers.ToString("N0")</div>
        <span class="stat-badge badge-success">@Model.UsersWithActiveSubscription.ToString("N0") اشتراک فعال</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">پرداخت موفق</div>
        <div class="stat-value">@Model.PaymentSummary.SuccessfulAmount.ToString("N0")</div>
        <span class="stat-badge badge-primary">@Model.PaymentSummary.SuccessfulCount.ToString("N0") تراکنش</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">بازدید وبلاگ</div>
        <div class="stat-value">@Model.TotalViews.ToString("N0")</div>
        <span class="stat-badge badge-warning">@Model.TotalBlogPosts.ToString("N0") مقاله</span>
    </div>
</section>


<div class="row g-4 align-items-stretch">
    <div class="col-lg-9">
        <section class="admin-panel revenue-panel h-100">
            <div class="panel-header">
                <div>
                    <h6>ثبت‌نام کاربران و اشتراک‌های خریداری شده</h6>
                </div>
                <div class="chart-tabs" role="tablist" aria-label="نمایش داده‌های نمودار">
                    <button class="chart-tab active" type="button" data-range="daily" data-chart="revenue">۳۰ روز</button>
                    <button class="chart-tab" type="button" data-range="monthly" data-chart="revenue">ماهانه</button>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="revenueChart" height="120"></canvas>
            </div>
        </section>
    </div>
    <div class="col-lg-3">
        <section class="admin-panel subscription-distribution-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>توزیع خرید اشتراک‌ها</h2>
                </div>
                <div class="chart-tabs" role="tablist" aria-label="نمایش داده‌های خرید اشتراک">
                    <button class="chart-tab active" type="button" data-range="daily" data-chart="subscription">روزانه</button>
                    <button class="chart-tab" type="button" data-range="monthly" data-chart="subscription">ماهانه</button>
                </div>
            </div>
            <p class="text-muted mt-3 mb-2 subscription-distribution-empty" id="subscriptionDistributionEmpty">داده‌ای برای نمایش خرید اشتراک وجود ندارد.</p>
            <ul class="subscription-distribution-list" id="subscriptionDistributionList"></ul>
        </section>
    </div>
</div>
<br />

<section class="admin-panel">
    <div class="panel-header">
        <div>
            <h2>آخرین ثبت‌نام کاربران</h2>
            <p>نمایش فعالیت‌های جدید در سامانه</p>
        </div>
        <span class="stat-badge badge-success">@Model.DailyRegistrationsLast30Days.Sum(item => item.Count).ToString("N0") ثبت‌نام ۳۰ روز</span>
    </div>
    @if (Model.RecentUsers.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>نقش</th>
                        <th>وضعیت</th>
                        <th>تاریخ ایجاد</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.RecentUsers)
                    {
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(user.FullName) ? user.UserName : user.FullName)</td>
                            <td>@user.Email</td>
                            <td>@(string.IsNullOrWhiteSpace(user.RoleName) ? "-" : user.RoleName)</td>
                            <td>
                                <span class="stat-badge @(user.IsActive ? "badge-success" : "badge-danger")">
                                    @(user.IsActive ? "فعال" : "غیرفعال")
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted mb-0">کاربری ثبت نشده است.</p>
    }
</section>

<div class="row g-4">
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>خلاصه پرداخت‌ها</h2>
                    <p>۳۰ روز اخیر</p>
                </div>
                <span class="stat-badge badge-primary">@Model.PaymentSummary.SuccessfulCount.ToString("N0") موفق</span>
            </div>
            <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">در انتظار تایید</span>
                    <span class="stat-badge badge-warning">@Model.PaymentSummary.PendingCount.ToString("N0")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">ناموفق یا لغو</span>
                    <span class="stat-badge badge-danger">@Model.PaymentSummary.FailedCount.ToString("N0")</span>
                </div>
                <div>
                    <h6 class="mb-2">پرداخت‌های اخیر</h6>
                    @if (Model.RecentPayments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>کاربر</th>
                                        <th>پلن</th>
                                        <th>مبلغ</th>
                                        <th>وضعیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.RecentPayments)
                                    {
                                        <tr>
                                            <td>@payment.CustomerName</td>
                                            <td>@payment.PlanTitle</td>
                                            <td>@payment.Amount.ToString("N0") تومان</td>
                                            <td><span class="stat-badge @PaymentStatusClass(payment.Status)">@payment.StatusLabel</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">تراکنشی برای نمایش موجود نیست.</p>
                    }
                </div>
            </div>
        </section>
    </div>
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>عملکرد محتوا</h2>
                    <p>محبوب‌ترین مقالات و توزیع نقش‌ها</p>
                </div>
                <span class="stat-badge badge-warning">@Model.PublishedBlogPosts.ToString("N0") منتشر شده</span>
            </div>
            <div class="d-flex flex-column gap-4">
                <div>
                    <h6 class="mb-2">محبوب‌ترین مقالات</h6>
                    @if (Model.PopularPosts.Any())
                    {
                        <ul class="list-clean">
                            @foreach (var post in Model.PopularPosts)
                            {
                                <li>
                                    <span>@post.Title</span>
                                    <span class="stat-badge badge-primary">@post.VisitCount.ToString("N0") بازدید</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">داده‌ای موجود نیست.</p>
                    }
                </div>
                <div>
                    <h6 class="mb-2">توزیع نقش‌ها</h6>
                    @if (Model.RoleDistribution.Any())
                    {
                        <ul class="list-clean">
                            @foreach (var role in Model.RoleDistribution)
                            {
                                <li>
                                    <span>@role.RoleName</span>
                                    <span class="stat-badge badge-primary">@role.UserCount.ToString("N0") کاربر</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">نقشی ثبت نشده است.</p>
                    }
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js" crossorigin="anonymous"></script>
    <script>
        (function () {
            const chartElement = document.getElementById('revenueChart');
            if (!chartElement || typeof window.Chart === 'undefined') {
                return;
            }

            const dailyLabels = @Html.Raw(JsonSerializer.Serialize(dailyLabels, jsonOptions));
            const dailyRegistrations = @Html.Raw(JsonSerializer.Serialize(dailyRegistrationValues, jsonOptions));
            const dailySubscriptions = @Html.Raw(JsonSerializer.Serialize(dailySubscriptionValues, jsonOptions));
            const monthlyLabels = @Html.Raw(JsonSerializer.Serialize(monthlyLabels, jsonOptions));
            const monthlyRegistrations = @Html.Raw(JsonSerializer.Serialize(monthlyRegistrationValues, jsonOptions));
            const monthlySubscriptions = @Html.Raw(JsonSerializer.Serialize(monthlySubscriptionValues, jsonOptions));
            const dailyPlanLabels = @Html.Raw(JsonSerializer.Serialize(dailySubscriptionPlanLabels, jsonOptions));
            const dailyPlanCounts = @Html.Raw(JsonSerializer.Serialize(dailySubscriptionPlanCounts, jsonOptions));
            const monthlyPlanLabels = @Html.Raw(JsonSerializer.Serialize(monthlySubscriptionPlanLabels, jsonOptions));
            const monthlyPlanCounts = @Html.Raw(JsonSerializer.Serialize(monthlySubscriptionPlanCounts, jsonOptions));

            const palette = {
                registrations: '#7c83ff',
                subscriptions: '#21c999'
            };
            const distributionPalette = ['#3d5afe', '#f59e0b', '#10b981', '#ef4444', '#8b5cf6', '#0ea5e9', '#f97316', '#14b8a6'];

            const buildData = (range) => {
                if (range === 'monthly') {
                    return {
                        labels: monthlyLabels,
                        registrations: monthlyRegistrations,
                        subscriptions: monthlySubscriptions
                    };
                }

                return {
                    labels: dailyLabels,
                    registrations: dailyRegistrations,
                    subscriptions: dailySubscriptions
                };
            };

            const initialData = buildData('daily');

            const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';
            const chartTextColor = isDark ? '#d1d5db' : '#4b5563';
            const chartGridColor = isDark ? 'rgba(148, 163, 184, 0.15)' : 'rgba(203, 213, 225, 0.6)';

            const revenueChart = new Chart(chartElement, {
                type: 'line',
                data: {
                    labels: initialData.labels,
                    datasets: [
                        {
                            label: 'ثبت‌نام کاربران',
                            data: initialData.registrations,
                            borderColor: palette.registrations,
                            backgroundColor: 'rgba(124, 131, 255, 0.2)',
                            tension: 0.4,
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            pointBackgroundColor: isDark ? '#1f2a44' : '#ffffff',
                            pointBorderColor: palette.registrations
                        },
                        {
                            label: 'اشتراک‌های خریداری شده',
                            data: initialData.subscriptions,
                            borderColor: palette.subscriptions,
                            backgroundColor: 'rgba(33, 201, 153, 0.2)',
                            tension: 0.4,
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            pointBackgroundColor: isDark ? '#1f2a44' : '#ffffff',
                            pointBorderColor: palette.subscriptions
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: {
                                color: chartTextColor,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        }
                    },
                    scales: {
                        x: {
                            ticks: { color: chartTextColor },
                            grid: { color: chartGridColor }
                        },
                        y: {
                            ticks: { color: chartTextColor },
                            grid: { color: chartGridColor },
                            beginAtZero: true
                        }
                    }
                }
            });

            const tabs = document.querySelectorAll('.chart-tab[data-chart="revenue"]');
            tabs.forEach((tab) => {
                tab.addEventListener('click', () => {
                    tabs.forEach((item) => item.classList.remove('active'));
                    tab.classList.add('active');
                    const range = tab.dataset.range || 'daily';
                    const next = buildData(range);
                    revenueChart.data.labels = next.labels;
                    revenueChart.data.datasets[0].data = next.registrations;
                    revenueChart.data.datasets[1].data = next.subscriptions;
                    revenueChart.update();
                });
            });

            const distributionListElement = document.getElementById('subscriptionDistributionList');
            const distributionEmptyElement = document.getElementById('subscriptionDistributionEmpty');

            const buildDistributionData = (range) => {
                if (range === 'monthly') {
                    return {
                        labels: monthlyPlanLabels,
                        counts: monthlyPlanCounts
                    };
                }

                return {
                    labels: dailyPlanLabels,
                    counts: dailyPlanCounts
                };
            };

            const renderDistributionList = (labels, counts) => {
                if (!distributionListElement || !distributionEmptyElement) {
                    return;
                }

                distributionListElement.innerHTML = '';
                const hasData = labels.length > 0 && counts.length > 0;
                distributionEmptyElement.classList.toggle('d-none', hasData);
                if (!hasData) {
                    return;
                }

                const max = Math.max(...counts, 0);
                labels.forEach((label, index) => {
                    const count = counts[index] ?? 0;
                    const color = distributionPalette[index % distributionPalette.length];
                    const width = max === 0 ? '0%' : `${Math.round((count / max) * 100)}%`;
                    const item = document.createElement('li');
                    item.innerHTML = `
                        <div class="subscription-distribution-plan">
                            <span class="subscription-distribution-dot" style="background:${color}"></span>
                            <span>${label}</span>
                        </div>
                        <div class="subscription-distribution-metrics">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width:${width}; background:${color}" aria-valuenow="${count}" aria-valuemin="0" aria-valuemax="${max}"></div>
                            </div>
                            <span class="subscription-distribution-count">${count.toLocaleString()}</span>
                        </div>`;
                    distributionListElement.appendChild(item);
                });
            };

            const distributionData = buildDistributionData('daily');
            renderDistributionList(distributionData.labels, distributionData.counts);

            const distributionTabs = document.querySelectorAll('.chart-tab[data-chart="subscription"]');
            distributionTabs.forEach((tab) => {
                tab.addEventListener('click', () => {
                    distributionTabs.forEach((item) => item.classList.remove('active'));
                tab.classList.add('active');
                const range = tab.dataset.range || 'daily';
                const next = buildDistributionData(range);
                renderDistributionList(next.labels, next.counts);
            });
        });

            const themeToggle = document.getElementById('themeToggle');
            const updateChartTheme = () => {
                const isDarkTheme = document.documentElement.getAttribute('data-bs-theme') === 'dark';
                const textColor = isDarkTheme ? '#d1d5db' : '#4b5563';
                const gridColor = isDarkTheme ? 'rgba(148, 163, 184, 0.15)' : 'rgba(203, 213, 225, 0.6)';
                revenueChart.options.plugins.legend.labels.color = textColor;
                revenueChart.options.scales.x.ticks.color = textColor;
                revenueChart.options.scales.y.ticks.color = textColor;
                revenueChart.options.scales.x.grid.color = gridColor;
                revenueChart.options.scales.y.grid.color = gridColor;
                revenueChart.data.datasets.forEach((dataset) => {
                    dataset.pointBackgroundColor = isDarkTheme ? '#1f2a44' : '#ffffff';
                });
                revenueChart.update();
            };
            themeToggle?.addEventListener('click', updateChartTheme);
        })();
    </script>
}

<div class="row g-4 mt-1">
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>ثبت‌نام ماهانه</h2>
                    <p>روند رشد کاربران</p>
                </div>
            </div>
            @if (Model.MonthlyRegistrations.Any())
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.MonthlyRegistrations)
                    {
                        <div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>@item.Month</span>
                                <span class="text-muted">@item.Count.ToString("N0")</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: @ProgressWidth(item.Count, maxMonthly)" aria-valuenow="@item.Count" aria-valuemin="0" aria-valuemax="@maxMonthly"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">داده‌ای برای ثبت‌نام ماهانه موجود نیست.</p>
            }
        </section>
    </div>
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>اشتراک‌های فعال</h2>
                    <p>مقایسه ماهانه اشتراک‌ها</p>
                </div>
            </div>
            @if (Model.MonthlyActiveSubscriptions.Any())
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.MonthlyActiveSubscriptions)
                    {
                        <div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>@item.Month</span>
                                <span class="text-muted">@item.Count.ToString("N0")</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @ProgressWidth(item.Count, maxSubscriptions)" aria-valuenow="@item.Count" aria-valuemin="0" aria-valuemax="@maxSubscriptions"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">اطلاعاتی برای نمایش اشتراک‌های فعال موجود نیست.</p>
            }
        </section>
    </div>
</div>
