@model DashboardViewModel
@using System.Linq
@using Chamedoon.Domin.Enums
@{
    ViewData["Title"] = "داشبورد";
    var maxMonthly = Model.MonthlyRegistrations.Any() ? Model.MonthlyRegistrations.Max(item => item.Count) : 0;
    var maxSubscriptions = Model.MonthlyActiveSubscriptions.Any() ? Model.MonthlyActiveSubscriptions.Max(item => item.Count) : 0;
    string ProgressWidth(int count, int max) => max == 0 ? "0%" : $"{Math.Round(count * 100d / max)}%";
    string PaymentStatusClass(PaymentStatus status) => status switch
    {
        PaymentStatus.Paid => "badge-success",
        PaymentStatus.Pending => "badge-warning",
        PaymentStatus.Redirected => "badge-warning",
        PaymentStatus.Failed => "badge-danger",
        PaymentStatus.Cancelled => "badge-danger",
        _ => "badge-primary"
    };
}

<section class="stat-grid">
    <div class="stat-card">
        <div class="stat-title">کل کاربران</div>
        <div class="stat-value">@Model.TotalUsers.ToString("N0")</div>
        <span class="stat-badge badge-primary">+@Model.NewUsersThisMonth.ToString("N0") این ماه</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">کاربران فعال</div>
        <div class="stat-value">@Model.ActiveUsers.ToString("N0")</div>
        <span class="stat-badge badge-success">@Model.UsersWithActiveSubscription.ToString("N0") اشتراک فعال</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">پرداخت موفق</div>
        <div class="stat-value">@Model.PaymentSummary.SuccessfulAmount.ToString("N0")</div>
        <span class="stat-badge badge-primary">@Model.PaymentSummary.SuccessfulCount.ToString("N0") تراکنش</span>
    </div>
    <div class="stat-card">
        <div class="stat-title">بازدید وبلاگ</div>
        <div class="stat-value">@Model.TotalViews.ToString("N0")</div>
        <span class="stat-badge badge-warning">@Model.TotalBlogPosts.ToString("N0") مقاله</span>
    </div>
</section>

<section class="admin-panel">
    <div class="panel-header">
        <div>
            <h2>آخرین ثبت‌نام کاربران</h2>
            <p>نمایش فعالیت‌های جدید در سامانه</p>
        </div>
        <span class="stat-badge badge-success">@Model.DailyRegistrationsLast30Days.Sum(item => item.Count).ToString("N0") ثبت‌نام ۳۰ روز</span>
    </div>
    @if (Model.RecentUsers.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>نقش</th>
                        <th>وضعیت</th>
                        <th>تاریخ ایجاد</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.RecentUsers)
                    {
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(user.FullName) ? user.UserName : user.FullName)</td>
                            <td>@user.Email</td>
                            <td>@(string.IsNullOrWhiteSpace(user.RoleName) ? "-" : user.RoleName)</td>
                            <td>
                                <span class="stat-badge @(user.IsActive ? "badge-success" : "badge-danger")">
                                    @(user.IsActive ? "فعال" : "غیرفعال")
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted mb-0">کاربری ثبت نشده است.</p>
    }
</section>

<div class="row g-4">
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>خلاصه پرداخت‌ها</h2>
                    <p>۳۰ روز اخیر</p>
                </div>
                <span class="stat-badge badge-primary">@Model.PaymentSummary.SuccessfulCount.ToString("N0") موفق</span>
            </div>
            <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">در انتظار تایید</span>
                    <span class="stat-badge badge-warning">@Model.PaymentSummary.PendingCount.ToString("N0")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">ناموفق یا لغو</span>
                    <span class="stat-badge badge-danger">@Model.PaymentSummary.FailedCount.ToString("N0")</span>
                </div>
                <div>
                    <h6 class="mb-2">پرداخت‌های اخیر</h6>
                    @if (Model.RecentPayments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>کاربر</th>
                                        <th>پلن</th>
                                        <th>مبلغ</th>
                                        <th>وضعیت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.RecentPayments)
                                    {
                                        <tr>
                                            <td>@payment.CustomerName</td>
                                            <td>@payment.PlanTitle</td>
                                            <td>@payment.Amount.ToString("N0") تومان</td>
                                            <td><span class="stat-badge @PaymentStatusClass(payment.Status)">@payment.StatusLabel</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">تراکنشی برای نمایش موجود نیست.</p>
                    }
                </div>
            </div>
        </section>
    </div>
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>عملکرد محتوا</h2>
                    <p>محبوب‌ترین مقالات و توزیع نقش‌ها</p>
                </div>
                <span class="stat-badge badge-warning">@Model.PublishedBlogPosts.ToString("N0") منتشر شده</span>
            </div>
            <div class="d-flex flex-column gap-4">
                <div>
                    <h6 class="mb-2">محبوب‌ترین مقالات</h6>
                    @if (Model.PopularPosts.Any())
                    {
                        <ul class="list-clean">
                            @foreach (var post in Model.PopularPosts)
                            {
                                <li>
                                    <span>@post.Title</span>
                                    <span class="stat-badge badge-primary">@post.VisitCount.ToString("N0") بازدید</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">داده‌ای موجود نیست.</p>
                    }
                </div>
                <div>
                    <h6 class="mb-2">توزیع نقش‌ها</h6>
                    @if (Model.RoleDistribution.Any())
                    {
                        <ul class="list-clean">
                            @foreach (var role in Model.RoleDistribution)
                            {
                                <li>
                                    <span>@role.RoleName</span>
                                    <span class="stat-badge badge-primary">@role.UserCount.ToString("N0") کاربر</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">نقشی ثبت نشده است.</p>
                    }
                </div>
            </div>
        </section>
    </div>
</div>

<div class="row g-4 mt-1">
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>ثبت‌نام ماهانه</h2>
                    <p>روند رشد کاربران</p>
                </div>
            </div>
            @if (Model.MonthlyRegistrations.Any())
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.MonthlyRegistrations)
                    {
                        <div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>@item.Month</span>
                                <span class="text-muted">@item.Count.ToString("N0")</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: @ProgressWidth(item.Count, maxMonthly)" aria-valuenow="@item.Count" aria-valuemin="0" aria-valuemax="@maxMonthly"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">داده‌ای برای ثبت‌نام ماهانه موجود نیست.</p>
            }
        </section>
    </div>
    <div class="col-lg-6">
        <section class="admin-panel h-100">
            <div class="panel-header">
                <div>
                    <h2>اشتراک‌های فعال</h2>
                    <p>مقایسه ماهانه اشتراک‌ها</p>
                </div>
            </div>
            @if (Model.MonthlyActiveSubscriptions.Any())
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.MonthlyActiveSubscriptions)
                    {
                        <div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>@item.Month</span>
                                <span class="text-muted">@item.Count.ToString("N0")</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @ProgressWidth(item.Count, maxSubscriptions)" aria-valuenow="@item.Count" aria-valuemin="0" aria-valuemax="@maxSubscriptions"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">اطلاعاتی برای نمایش اشتراک‌های فعال موجود نیست.</p>
            }
        </section>
    </div>
</div>
