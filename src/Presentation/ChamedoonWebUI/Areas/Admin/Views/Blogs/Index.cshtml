@model BlogsIndexViewModel
@{
    ViewData["Title"] = "مدیریت مقالات";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">مقالات</h1>
        <a asp-action="Create" class="btn btn-primary">افزودن مقاله</a>
    </div>

    <form method="get" class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label for="search" class="form-label">جستجو</label>
                    <input id="search" name="search" value="@Model.SearchTerm" class="form-control" placeholder="عنوان یا نویسنده" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary w-100">جستجو</button>
                </div>
            </div>
        </div>
    </form>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Posts.Any())
            {
                <div class="p-4 text-center text-muted">مقاله‌ای برای نمایش وجود ندارد.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>عنوان</th>
                            <th>نویسنده</th>
                            <th>بازدید</th>
                            <th>تاریخ ایجاد</th>
                            <th class="text-end">عملیات</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var post in Model.Posts)
                        {
                            <tr>
                                <td>@post.Title</td>
                                <td>@post.Writer</td>
                                <td>@post.VisitCount.ToString("N0")</td>
                                <td>@post.CreatedAt.ToString("yyyy/MM/dd")</td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary">ویرایش</a>
                                        <form asp-action="Delete" asp-route-id="@post.Id" method="post" onsubmit="return confirm('آیا از حذف این مقاله مطمئن هستید؟');" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">حذف</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
