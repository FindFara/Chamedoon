@model RolesIndexViewModel
@using System
@using System.Linq
@{
    ViewData["Title"] = "مدیریت نقش‌ها";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">نقش‌ها</h1>
        <a asp-action="Create" class="btn btn-primary">افزودن نقش</a>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xl-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-0">
                    @if (!Model.Roles.Any())
                    {
                        <div class="p-4 text-center text-muted">نقشی برای نمایش وجود ندارد.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th>نام نقش</th>
                                    <th>مجوزها</th>
                                    <th class="text-end">عملیات</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td>
                                            @if (!role.Permissions.Any())
                                            {
                                                <span class="text-muted">بدون مجوز</span>
                                            }
                                            else
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var permission in role.Permissions)
                                                    {
                                                        <span class="badge bg-light text-dark">@permission</span>
                                                    }
                                                </div>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a
                                                    asp-action="Edit"
                                                    asp-route-id="@role.Id"
                                                    class="btn btn-sm btn-outline-primary">
                                                    ویرایش
                                                </a>
                                                <form
                                                    asp-action="Delete"
                                                    asp-route-id="@role.Id"
                                                    method="post"
                                                    onsubmit="return confirm('آیا از حذف این نقش مطمئن هستید؟');"
                                                    class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">حذف</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h2 class="h5 mb-4">مجوزهای تعریف‌شده</h2>
                    @{ var distinctPermissions = Model.Roles
                        .SelectMany(role => role.Permissions)
                        .Distinct(StringComparer.OrdinalIgnoreCase)
                        .OrderBy(name => name)
                        .ToList(); }
                    @if (!distinctPermissions.Any())
                    {
                        <p class="text-muted mb-0">مجوزی ثبت نشده است.</p>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var permission in distinctPermissions)
                            {
                                <span class="badge bg-soft-primary text-primary fw-semibold">@permission</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
