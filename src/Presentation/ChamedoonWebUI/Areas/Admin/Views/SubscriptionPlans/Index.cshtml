@model SubscriptionPlanIndexViewModel
@{
    ViewData["Title"] = "پلن‌های اشتراک";
}

<div class="container-fluid py-4 admin-section subscription-plans-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">مدیریت پلن‌های اشتراک</h1>
        <a asp-action="Create" class="btn btn-primary">افزودن پلن جدید</a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-9 col-lg-10">
                    <label for="search" class="form-label">جستجو</label>
                    <input id="search" name="search" value="@Model.SearchTerm" class="form-control" placeholder="شناسه یا عنوان پلن" />
                </div>
                <div class="col-md-3 col-lg-2">
                    <button type="submit" class="btn btn-outline-primary w-100">جستوجو</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Plans.Any())
            {
                <div class="p-4 text-center text-muted">پلنی برای نمایش وجود ندارد.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>شناسه</th>
                            <th>عنوان</th>
                            <th>مدت</th>
                            <th>قیمت</th>
                            <th>استعلام</th>
                            <th>هوش مصنوعی</th>
                            <th>مرتب‌سازی</th>
                            <th>وضعیت</th>
                            <th class="text-end">عملیات</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var plan in Model.Plans)
                        {
                            <tr>
                                <td><strong>@plan.Id</strong></td>
                                <td>@plan.Title</td>
                                <td>@plan.DurationLabel</td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span>@plan.PriceLabel تومان</span>
                                        <small class="text-muted">اصلی: @plan.OriginalPriceLabel</small>
                                    </div>
                                </td>
                                <td>@plan.EvaluationLabel</td>
                                <td>@plan.AiLabel</td>
                                <td>@plan.SortOrder</td>
                                <td>
                                    @if (plan.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-primary">ویرایش</a>
                                        <form asp-action="Delete" asp-route-id="@plan.Id" method="post" onsubmit="return confirm('آیا از غیرفعال کردن این پلن مطمئن هستید؟');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">غیرفعال</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalPages > 1)
                {
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, startPage + 4);
                    startPage = Math.Max(1, endPage - 4);
                    <nav aria-label="صفحات پلن‌های اشتراک" class="p-3 admin-pagination">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : string.Empty)">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchTerm">قبلی</a>
                            </li>
                            @for (var i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchTerm">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : string.Empty)">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchTerm">بعدی</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
