@model UsersIndexViewModel
@{
    ViewData["Title"] = "مدیریت کاربران";
}

<div class="admin-card mb-4">
    <div class="d-flex flex-column flex-lg-row align-items-lg-end gap-3">
        <form asp-area="Admin" asp-controller="Users" asp-action="Index" method="get" class="row g-3 flex-grow-1">
            <div class="col-12 col-md-6">
                <label class="form-label" for="Search">جستجوی کاربر</label>
                <input type="text" id="Search" name="search" class="form-control" value="@Model.SearchTerm" placeholder="نام یا ایمیل" />
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label" for="RoleId">نقش</label>
                <select id="RoleId" name="roleId" class="form-select">
                    <option value="">همه نقش‌ها</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Id" selected="@(Model.SelectedRoleId == role.Id ? "selected" : null)">@role.Name</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-2 d-grid align-self-end">
                <button type="submit" class="btn btn-primary">فیلتر</button>
            </div>
        </form>
        <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-success align-self-stretch">کاربر جدید</a>
    </div>
</div>

<div class="admin-card">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
            <tr>
                <th>نام</th>
                <th>ایمیل</th>
                <th>نقش</th>
                <th>وضعیت</th>
                <th class="text-end">تاریخ عضویت</th>
                <th class="text-end">عملیات</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td class="fw-semibold">@user.FullName</td>
                    <td class="text-muted">@user.Email</td>
                    <td>@Model.Roles.FirstOrDefault(r => r.Id == user.RoleId)?.Name</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success-subtle text-success">فعال</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary">غیرفعال</span>
                        }
                    </td>
                    <td class="text-end">@user.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-secondary">ویرایش</a>
                            <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('آیا از حذف کاربر مطمئن هستید؟');">
                                <button type="submit" class="btn btn-outline-danger">حذف</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
