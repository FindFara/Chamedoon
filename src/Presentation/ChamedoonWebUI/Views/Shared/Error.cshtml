@{
    var statusCode = ViewData["StatusCode"] as int? ?? Context.Response?.StatusCode ?? 500;
    ViewData["Title"] = "خطایی رخ داده است";
}

<section class="error-page py-5 py-lg-6">
    <div class="container">
        <div class="error-card">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6 order-lg-2">
                    <div class="error-illustration" aria-hidden="true">
                        <div class="error-orb error-orb--primary"></div>
                        <div class="error-orb error-orb--secondary"></div>
                        <div class="error-icon-wrapper">
                            <div class="error-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none">
                                    <path d="M10 34.5 21.8 11.9c1.4-2.8 5-2.8 6.4 0L40 34.5c1.4 2.8-0.6 6.1-3.6 6.1H13.6C10.7 40.6 8.6 37.3 10 34.5Z" stroke="currentColor" stroke-width="2.4" />
                                    <path d="M24 18v8.5" stroke="currentColor" stroke-width="2.4" stroke-linecap="round" />
                                    <circle cx="24" cy="33" r="1.6" fill="currentColor" />
                                </svg>
                            </div>
                            <div class="error-badge">@statusCode</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <p class="error-kicker">مشکلی پیش آمده</p>
                    <h1 class="error-title">متأسفانه در پردازش درخواست شما خطایی رخ داد</h1>
                    <p class="error-text">در حال حاضر نمی‌توانیم صفحه موردنظر را نمایش دهیم. می‌توانید بعداً دوباره تلاش کنید یا به صفحه اصلی برگردید. اگر این خطا تکرار شد، لطفاً گزارش دهید تا سریع‌تر بررسی کنیم.</p>
                    <div class="d-flex flex-column flex-sm-row gap-3 mt-4">
                        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Index">بازگشت به خانه</a>
                        <a class="btn btn-outline-primary btn-lg" asp-controller="Home" asp-action="About">آشنایی با چمدون</a>
                    </div>
                    <div class="error-actions mt-4">
                        <div class="error-tip">
                            <span class="error-tip-icon" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
                                    <path d="M12 4v7" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
                                    <circle cx="12" cy="17" r="1.25" fill="currentColor" />
                                    <path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2Z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <div>
                                <p class="mb-1 fw-semibold">چطور می‌توانیم کمک کنیم؟</p>
                                <ul class="error-list">
                                    <li>وضعیت اتصال اینترنت را بررسی کنید.</li>
                                    <li>یک‌بار صفحه را رفرش کنید یا بعداً دوباره امتحان کنید.</li>
                                    <li>اگر مشکل ادامه داشت، آن را به تیم پشتیبانی گزارش دهید.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
