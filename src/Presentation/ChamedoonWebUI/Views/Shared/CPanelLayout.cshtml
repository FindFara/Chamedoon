<style>
    .userpanel {
        top: 100px;
    }
</style>
<section class="section mt-60">
    <div class="container mt-lg-3">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-12 userpanel">
                <div class="card public-profile border-0 rounded shadow-md">
                    <div class="card-body" style="background: url('/img/bg/bg2.png') center center;">
                        <img src="~/images/member3.png" class="avatar avatar-large rounded-circle shadow d-block mx-auto" alt="">
                        <div class="mt-4 ">
                            <h6 class="title mb-0">@Model.UserName</h6>
                        </div>
                        <small class="text-muted h6 me-2">تاریخ عضویت : </small>
                        <small class="text-muted h6 me-2">@Model.Created</small>
                    </div>
                </div>
                <partial name="UserPanelSidebar" />
            </div>
            @RenderBody()


            <br />
        </div>
    </div>
</section>
