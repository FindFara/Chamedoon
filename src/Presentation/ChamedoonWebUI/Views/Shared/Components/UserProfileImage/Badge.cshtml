@using Chamedoon.Application.Services.Customers
@model Chamedoon.Application.Services.Customers.ViewModel.CustomerProfileViewModel
@{
    var profileImage = string.IsNullOrWhiteSpace(Model?.ProfileImage)
        ? ProfileImageHelper.GetDefaultBase64()
        : Model.ProfileImage;
    var firstName = Model?.FirstName ?? "کاربر";
}

<span class="user-avatar-thumb" title="@firstName" aria-hidden="true">
    <img src="@profileImage" alt="@firstName" loading="lazy" decoding="async" />
</span>
