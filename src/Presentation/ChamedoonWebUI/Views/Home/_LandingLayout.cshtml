@{
    Layout = null;
    var pageTitle = ViewData["Title"] as string ?? "Chamedoon";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle - Chamedoon</title>
    <link rel="icon" type="image/svg+xml" href="~/newtheme/img/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/newtheme/css/site.css" asp-append-version="true" />
</head>
<body class="landing-page bg-light">
    <div class="d-flex flex-column min-vh-100">
        <header class="landing-header border-bottom bg-white">
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                <div class="container">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Chamedoon</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#landingNav" aria-controls="landingNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="landingNav">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center gap-lg-3">
                            <li class="nav-item"><a class="nav-link" href="#features">Features</a></li>
                            <li class="nav-item"><a class="nav-link" href="#process">How it works</a></li>
                            <li class="nav-item"><a class="nav-link" href="#insights">Insights</a></li>
                            <li class="nav-item"><a class="nav-link" href="#testimonials">Stories</a></li>
                            <li class="nav-item"><a class="btn btn-primary" asp-controller="Immigration" asp-action="Index">Start assessment</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="flex-grow-1">
            @RenderBody()
        </main>

        <footer class="landing-footer bg-white border-top py-5">
            <div class="container">
                <div class="row gy-4">
                    <div class="col-md-4">
                        <a class="navbar-brand fw-bold mb-3 d-inline-block" asp-controller="Home" asp-action="Index">Chamedoon</a>
                        <p class="text-muted">Guiding you through every section of your journey abroad with clarity and confidence.</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="fw-semibold mb-3">Explore</h6>
                        <ul class="list-unstyled text-muted">
                            <li><a class="text-reset text-decoration-none" asp-controller="Home" asp-action="Index">Legacy home</a></li>
                            <li><a class="text-reset text-decoration-none" asp-controller="Immigration" asp-action="Index">Assessment</a></li>
                            <li><a class="text-reset text-decoration-none" asp-controller="Blog" asp-action="Index">Blog</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6 class="fw-semibold mb-3">Stay connected</h6>
                        <p class="text-muted">Join our newsletter to receive curated insights and essential updates.</p>
                        <form class="row g-2" method="post" action="#">
                            <div class="col-12 col-sm">
                                <label class="visually-hidden" for="landingEmail">Email</label>
                                <input id="landingEmail" type="email" class="form-control" placeholder="Email address" required />
                            </div>
                            <div class="col-12 col-sm-auto">
                                <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 pt-4 border-top">
                    <p class="mb-0 text-muted">© @DateTime.UtcNow.Year Chamedoon. All rights reserved.</p>
                    <div class="d-flex gap-3 mt-3 mt-md-0">
                        <a class="text-decoration-none text-muted" href="#">Privacy</a>
                        <a class="text-decoration-none text-muted" href="#">Terms</a>
                        <a class="text-decoration-none text-muted" href="#">Support</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <a id="backToTop" class="btn btn-primary btn-lg back-to-top" href="#" aria-label="Back to top">
        ↑
    </a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/newtheme/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
