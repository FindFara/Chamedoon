@model ChamedoonWebUI.Models.BlogArticleMetaModel
<div class="blog-meta">
    <div class="blog-meta-info">
        <span class="blog-meta-author">
            <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                <path d="M12 12c2.97 0 5.38-2.41 5.38-5.38S14.97 1.25 12 1.25 6.62 3.66 6.62 6.62 9.03 12 12 12Zm0 2.25c-3.41 0-6.52 1.79-8.25 4.7a1.13 1.13 0 0 0 .98 1.68h14.54a1.13 1.13 0 0 0 .98-1.68c-1.73-2.91-4.84-4.7-8.25-4.7Z"></path>
            </svg>
            <span>@Model.Writer</span>
        </span>
        <span class="blog-meta-divider" aria-hidden="true">â€¢</span>
        <span class="blog-meta-views" aria-label="@Model.VisitLabel">
            <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                <path d="M12 5.25c5.52 0 9.41 4.35 10.61 6.01a1.25 1.25 0 0 1 0 1.48C21.41 14.39 17.52 18.75 12 18.75S2.59 14.39 1.39 12.74a1.25 1.25 0 0 1 0-1.48C2.59 9.6 6.48 5.25 12 5.25Zm0 2c-4.35 0-7.71 3.29-8.91 4.75 1.2 1.46 4.56 4.75 8.91 4.75s7.71-3.29 8.91-4.75c-1.2-1.46-4.56-4.75-8.91-4.75Zm0 1.75a3.25 3.25 0 1 1 0 6.5 3.25 3.25 0 0 1 0-6.5Zm0 2a1.25 1.25 0 1 0 0 2.5 1.25 1.25 0 0 0 0-2.5Z"></path>
            </svg>
            <span>@Model.VisitCountText</span>
            <span class="blog-meta-views-label">@Model.VisitCaption</span>
        </span>
    </div>
    @if (Model.ShowShareButton)
    {
        <button type="button"
                class="blog-share-button blog-meta-share"
                data-share-url="@Model.ShareUrl"
                data-share-title="@Model.ShareTitle"
                data-share-text="@Model.ShareText"
                data-share-success="@Model.ShareSuccessLabel"
                data-share-error="@Model.ShareErrorLabel"
                aria-label="@Model.ShareAriaLabel">
            <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                <path d="M12 3a1.25 1.25 0 0 1 1.25 1.25v3.19l2.62-1.51a1.25 1.25 0 1 1 1.25 2.17l-3.87 2.23v1.55l3.87 2.23a1.25 1.25 0 1 1-1.25 2.17l-2.62-1.51v3.19A1.25 1.25 0 0 1 12 21a1.25 1.25 0 0 1-1.25-1.25v-3.19l-2.62 1.51a1.25 1.25 0 1 1-1.25-2.17l3.87-2.23V10.3l-3.87-2.23a1.25 1.25 0 1 1 1.25-2.17l2.62 1.51V4.25A1.25 1.25 0 0 1 12 3Z"></path>
            </svg>
        </button>
    }
</div>
