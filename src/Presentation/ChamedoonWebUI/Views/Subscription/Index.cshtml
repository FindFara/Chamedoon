@model ChamedoonWebUI.Models.SubscriptionPageViewModel
@using System.Linq
@{
    ViewData["Title"] = "انتخاب اشتراک";
}

@section Styles {
    <link rel="stylesheet" href="~/css/subscription.css" asp-append-version="true" />
}

<section class="subscription-showcase py-5 py-lg-6">
    <div class="container">
        <div class="subscription-hero">
            <div>
                <p class="subscription-tag">ارزیابی سریع</p>
                <h1>سه پلن ساده برای شروع</h1>
                <p class="subscription-lead">تمام پلن‌ها یک‌ماهه هستند و با تخفیف خرید اول فعال می‌شوند.</p>
            </div>
            <div class="subscription-status">
                <p class="subscription-status__title">وضعیت اشتراک فعلی</p>
                @if (Model.CurrentSubscription is null)
                {
                    <p class="subscription-status__value text-muted mb-1">فعلاً اشتراکی ثبت نشده.</p>
                    <p class="subscription-status__meta mb-0">یکی از پلن‌ها را انتخاب کن و مستقیم وارد ارزیابی شو.</p>
                }
                else
                {
                    <p class="subscription-status__value">@Model.CurrentSubscription.PlanTitle</p>
                    <p class="subscription-status__meta mb-1">@Model.CurrentSubscription.RemainingDays روز باقی مانده</p>
                    @if (Model.CurrentSubscription.EvaluationLimit is null)
                    {
                        <p class="subscription-status__meta mb-0">استعلام نامحدود فعال است.</p>
                    }
                    else
                    {
                        <p class="subscription-status__meta mb-0">@Model.CurrentSubscription.UsedEvaluations از @Model.CurrentSubscription.EvaluationLimit استعلام استفاده شده</p>
                    }
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
        {
            <div class="alert alert-info subscription-alert" role="alert">
                @Model.AlertMessage
            </div>
        }

        <div class="plan-stack" role="list">
            @for (var index = 0; index < Model.Plans.Count; index++)
            {
                var plan = Model.Plans[index];
                var isCurrent = Model.CurrentSubscription?.PlanId == plan.Id;
                var highlights = plan.Features.Take(3).ToList();
                var limitLabel = plan.EvaluationLimit is null ? "استعلام نامحدود" : $"{plan.EvaluationLimit} استعلام";
                <article class="plan-card @(plan.IncludesAI ? "plan-card--ai" : string.Empty) @(isCurrent ? "plan-card--active" : string.Empty)" role="listitem">
                    <header class="plan-card__head">
                        <div>
                            <span class="plan-card__badge">پلن @plan.DurationLabel</span>
                            <h3>@plan.Title</h3>
                        </div>
                        <span class="plan-card__pill">
                            @(plan.IncludesAI ? "هوش مصنوعی" : limitLabel)
                        </span>
                    </header>
                    <div class="plan-card__body">
                        <ul class="plan-card__features">
                            @foreach (var feature in highlights)
                            {
                                <li>@feature</li>
                            }
                            <li class="plan-card__limit">@limitLabel</li>
                        </ul>
                        <div class="plan-card__pricing">
                            <div class="plan-card__amounts">
                                <span class="plan-card__current">@plan.Price.ToString("N0") <small>تومان</small></span>
                                <span class="plan-card__old">@plan.OriginalPrice.ToString("N0") تومان</span>
                            </div>
                            <span class="plan-card__discount">@plan.SavingsAmount.ToString("N0") تومان تخفیف</span>
                            @if (plan.DiscountPercent > 0)
                            {
                                <span class="plan-card__percent">%@plan.DiscountPercent کمتر</span>
                            }
                            <form asp-action="Subscribe" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="planId" value="@plan.Id" />
                                <button type="submit" class="btn btn-light w-100" @(isCurrent ? "disabled" : string.Empty)>
                                    @(isCurrent ? "در حال استفاده" : "شروع ارزیابی")
                                </button>
                            </form>
                        </div>
                    </div>
                </article>
            }
        </div>
    </div>
</section>
