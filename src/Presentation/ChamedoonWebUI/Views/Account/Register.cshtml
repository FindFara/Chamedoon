@model Chamedoon.Application.Services.Account.Register.ViewModel.RegisterUser_VM
@{
    ViewData["Title"] = "ثبت‌نام در چمدون";
    ViewData["HideChrome"] = true;
    var hasErrors = (ViewData.ModelState?.ErrorCount ?? 0) > 0 || ViewData["ErrorMessage"] != null;
}

<section class="glass-section auth-section auth-section-centered">
    @if (hasErrors)
    {
        <div class="floating-alert" role="alert" aria-live="assertive" data-auto-dismiss-after="4000">
            <div class="floating-alert__box floating-alert__box--error">
                <div class="floating-alert__icon" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" role="img">
                        <path d="M12 3.5 3.75 19.25c-.47.9.16 1.99 1.16 1.99h14.18c1 0 1.63-1.09 1.16-1.99L12 3.5Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round" />
                        <path d="M12 9v5M12 16.5h.01" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" />
                    </svg>
                </div>
                <div class="floating-alert__content">
                    <p class="floating-alert__title mb-1">خطا در ثبت‌نام</p>
                    <div class="floating-alert__message" asp-validation-summary="All"></div>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <p class="floating-alert__message mb-0">@ViewData["ErrorMessage"]</p>
                    }
                </div>
                <div class="floating-alert__timer" aria-hidden="true" data-alert-timer>
                    <svg viewBox="0 0 32 32" role="presentation" focusable="false">
                        <circle class="floating-alert__timer-track" cx="16" cy="16" r="14" />
                        <circle class="floating-alert__timer-progress" cx="16" cy="16" r="14" />
                    </svg>
                </div>
                <button type="button" class="floating-alert__close" data-dismiss-alert aria-label="بستن هشدار">✕</button>
            </div>
        </div>
    }
    <div class="auth-abstract-bg" aria-hidden="true">
        <span class="blob blob-1"></span>
        <span class="blob blob-2"></span>
        <span class="grid-pattern"></span>
    </div>
    <div class="container">
        <div class="auth-grid auth-grid-compact auth-grid-single">
            <div class="glass-card auth-card auth-card-compact">
                <div class="auth-card-header text-center">
                    <h2 class="mb-0">ایجاد حساب جدید</h2>
                </div>
                <form asp-action="PhoneLogin" method="get" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["RegisterNonce"] as string)" />
                    <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] as string)" />
                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" data-validate-email="true" data-disallow-persian="true" />
                    </div>
                    <div class="glass-field">
                        <label asp-for="Password" class="form-label">رمز عبور</label>
                        <input asp-for="Password" type="password" class="form-control glass-input" placeholder="رمز عبور" data-disallow-persian="true" />
                    </div>
                    <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ثبت‌نام و ادامه</button>
                </form>
                <div class="auth-divider">یا ثبت‌نام با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">✨</span>
                    ثبت‌نام با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>قبلاً حساب ساخته‌ای؟ <a asp-controller="Account" asp-action="PhoneLogin">ورود به چمدون</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
