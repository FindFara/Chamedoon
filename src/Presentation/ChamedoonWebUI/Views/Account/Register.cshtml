@model ChamedoonWebUI.Models.RegisterWithCodeViewModel
@{ 
    ViewData["Title"] = "ثبت‌نام در چمدون";
    ViewData["HideChrome"] = true;
}

<section class="glass-section auth-section auth-section-centered">
    <div class="auth-abstract-bg" aria-hidden="true">
        <span class="blob blob-1"></span>
        <span class="blob blob-2"></span>
        <span class="grid-pattern"></span>
    </div>
    <div class="container">
        <div class="auth-grid auth-grid-compact auth-grid-single">
            <div class="glass-card auth-card auth-card-compact">
                <div class="auth-card-header text-center">
                    <h2 class="mb-0">ایجاد حساب جدید</h2>
                </div>
                <form asp-action="Register" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["RegisterNonce"] as string)" />
                    @if (!Model.CodeSent)
                    {
                        <div class="glass-field">
                            <label asp-for="Email" class="form-label">ایمیل</label>
                            <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="text-danger small" asp-validation-summary="All"></div>
                        <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ارسال کد تأیید</button>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="CodeSent" value="true" />
                        <div class="glass-field">
                            <label class="form-label">کد تأیید ارسال شده به @Model.Email</label>
                            <div class="d-flex gap-2 justify-content-between code-input-group">
                                @for (var i = 0; i < 4; i++)
                                {
                                    <input name="CodeDigits[@i]" value="@(Model.CodeDigits?.ElementAtOrDefault(i) ?? string.Empty)" class="form-control glass-input text-center code-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" autocomplete="one-time-code" />
                                }
                            </div>
                            <span asp-validation-for="CodeDigits" class="text-danger small"></span>
                        </div>
                        <div class="glass-field">
                            <label asp-for="Password" class="form-label">رمز عبور</label>
                            <input asp-for="Password" type="password" class="form-control glass-input" placeholder="رمز عبور قدرتمند" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="glass-field">
                            <label asp-for="ConfirmPassword" class="form-label">تایید رمز عبور</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control glass-input" placeholder="تکرار رمز عبور" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="text-danger small">@ViewData["ErrorMessage"]</div>
                        }
                        <div class="text-danger small" asp-validation-summary="All"></div>
                        <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">تایید کد و ساخت حساب</button>
                    }
                </form>
                <div class="auth-divider">یا ثبت‌نام با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">✨</span>
                    ثبت‌نام با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>قبلاً حساب ساخته‌ای؟ <a asp-controller="Account" asp-action="Login">ورود به چمدون</a></span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            const inputs = document.querySelectorAll('.code-input');
            inputs.forEach((input, index) => {
                input.addEventListener('input', (event) => {
                    const value = event.target.value.replace(/\D/g, '');
                    event.target.value = value.slice(0, 1);
                    if (event.target.value && inputs[index + 1]) {
                        inputs[index + 1].focus();
                    }
                });

                input.addEventListener('keydown', (event) => {
                    if (event.key === 'Backspace' && !event.target.value && inputs[index - 1]) {
                        inputs[index - 1].focus();
                    }
                });
            });
        })();
    </script>
}
