@model Chamedoon.Application.Services.Account.Register.ViewModel.RegisterUser_VM
@{
    ViewData["Title"] = "ثبت‌نام در چمدون";
}

<section class="glass-section auth-section">
    <div class="container">
        <div class="auth-grid">
            <div class="auth-intro text-lg-end">
                <span class="badge">شروع تجربه جدید</span>
                <h1 class="fw-bold">تنها چند کلیک تا دسترسی به نقشه راه مهاجرتی شخصی.</h1>
                <p class="text-muted mb-4">
                    با ساخت حساب، مسیرهای پیشنهادی، مدارک موردنیاز و امتیازبندی دقیق را در قالب یک داشبورد شفاف دنبال کن.
                </p>
                <ul class="auth-benefits">
                    <li>پروفایل شخصی با امکان ذخیره مدارک و پیشرفت</li>
                    <li>دریافت پیشنهاد کشور و نوع ویزا بر اساس شرایط واقعی</li>
                    <li>دسترسی به محتوای تخصصی و تجربه‌های کاربران</li>
                </ul>
            </div>
            <div class="glass-card auth-card">
                <div class="auth-card-header">
                    <h2>ایجاد حساب جدید</h2>
                </div>
                <form asp-action="Register" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["RegisterNonce"] as string)" />
                    <input type="hidden" asp-for="Stage" />

                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        @{
                            var isReadOnly = Model.Stage != Chamedoon.Application.Services.Account.Register.ViewModel.RegisterStep.EnterEmail;
                        }
                        <input asp-for="Email"
                               type="email"
                               class="form-control glass-input"
                               placeholder="example@mail.com"
                               readonly="@(isReadOnly ? "readonly" : null)" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    @if (Model.Stage == Chamedoon.Application.Services.Account.Register.ViewModel.RegisterStep.EnterEmail)
                    {
                        <button type="submit" name="actionType" value="sendCode" class="btn btn-outline-secondary btn-sm mb-3">ارسال کد به ایمیل</button>
                    }

                    @if (Model.Stage >= Chamedoon.Application.Services.Account.Register.ViewModel.RegisterStep.VerifyCode)
                    {
                        <div class="glass-field">
                            <label asp-for="VerificationCode" class="form-label">کد تایید</label>
                            <input type="hidden" asp-for="VerificationCode" />
                            <div class="d-flex gap-2 flex-wrap flex-lg-nowrap align-items-center">
                                <div class="d-flex gap-2 otp-input-group" data-target="VerificationCode">
                                    <input class="form-control glass-input otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" aria-label="رقم اول کد" />
                                    <input class="form-control glass-input otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" aria-label="رقم دوم کد" />
                                    <input class="form-control glass-input otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" aria-label="رقم سوم کد" />
                                    <input class="form-control glass-input otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]*" aria-label="رقم چهارم کد" />
                                </div>
                                <button type="submit" name="actionType" value="verifyCode" class="btn btn-outline-secondary">تایید کد</button>
                            </div>
                            <span asp-validation-for="VerificationCode" class="text-danger small"></span>
                        </div>
                    }

                    @if (Model.Stage == Chamedoon.Application.Services.Account.Register.ViewModel.RegisterStep.SetCredentials)
                    {
                        <div class="glass-field">
                            <label asp-for="UserName" class="form-label">نام کاربری</label>
                            <input asp-for="UserName" class="form-control glass-input" placeholder="نام کاربری" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>
                        <div class="glass-field">
                            <label asp-for="Password" class="form-label">رمز عبور</label>
                            <input asp-for="Password" type="password" class="form-control glass-input" placeholder="حداقل ۶ کاراکتر" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="glass-field">
                            <label asp-for="ConfirmPassword" class="form-label">تکرار رمز عبور</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control glass-input" placeholder="تکرار رمز" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    }

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="text-danger small">@ViewData["ErrorMessage"]</div>
                    }
                    @if (ViewBag.InfoMessage != null)
                    {
                        <div class="alert alert-info py-2">@ViewBag.InfoMessage</div>
                    }
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    @if (Model.Stage == Chamedoon.Application.Services.Account.Register.ViewModel.RegisterStep.SetCredentials)
                    {
                        <button type="submit" name="actionType" value="register" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ثبت‌نام</button>
                    }
                </form>
                <div class="auth-divider">یا ثبت‌نام با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">✨</span>
                    ثبت‌نام با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>قبلاً حساب ساخته‌ای؟ <a asp-controller="Account" asp-action="Login">ورود به چمدون</a></span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            const groups = document.querySelectorAll('.otp-input-group');

            groups.forEach(group => {
                const targetId = group.getAttribute('data-target');
                const hidden = document.getElementById(targetId);
                const inputs = Array.from(group.querySelectorAll('.otp-input'));

                const syncHidden = () => {
                    const value = inputs.map(i => i.value).join('');
                    if (hidden) {
                        hidden.value = value;
                    }
                };

                inputs.forEach((input, index) => {
                    input.addEventListener('input', () => {
                        input.value = input.value.replace(/[^0-9]/g, '');
                        if (input.value && index < inputs.length - 1) {
                            inputs[index + 1].focus();
                        }
                        syncHidden();
                    });

                    input.addEventListener('keydown', (e) => {
                        if (e.key === 'Backspace' && !input.value && index > 0) {
                            inputs[index - 1].focus();
                        }
                    });

                    input.addEventListener('paste', (e) => {
                        const text = (e.clipboardData || window.clipboardData).getData('text').replace(/\D/g, '').slice(0, inputs.length);
                        inputs.forEach((box, boxIndex) => {
                            box.value = text[boxIndex] ?? '';
                        });
                        syncHidden();
                        const nextIndex = Math.min(text.length, inputs.length - 1);
                        inputs[nextIndex]?.focus();
                        e.preventDefault();
                    });
                });

                if (hidden && hidden.value) {
                    hidden.value.split('').forEach((digit, i) => {
                        if (inputs[i]) {
                            inputs[i].value = digit;
                        }
                    });
                }
            });
        })();
    </script>
}
