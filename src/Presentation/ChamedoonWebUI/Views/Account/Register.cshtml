@model Chamedoon.Application.Services.Account.Register.ViewModel.RegisterUser_VM
@{ 
    ViewData["Title"] = "ثبت‌نام در چمدون";
    ViewData["HideChrome"] = true;
}

<section class="glass-section auth-section auth-section-centered">
    <div class="auth-abstract-bg" aria-hidden="true">
        <span class="blob blob-1"></span>
        <span class="blob blob-2"></span>
        <span class="grid-pattern"></span>
    </div>
    <div class="container">
        <div class="auth-grid auth-grid-compact auth-grid-single">
            <div class="glass-card auth-card auth-card-compact">
                <div class="auth-card-header text-center">
                    <h2 class="mb-0">ایجاد حساب جدید</h2>
                </div>
                <form asp-action="Register" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["RegisterNonce"] as string)" />
                    <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] as string)" />
                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                    <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="glass-field">
                    <label asp-for="Password" class="form-label">رمز عبور</label>
                    <div class="password-input-wrapper">
                        <input asp-for="Password" type="password" class="form-control glass-input" placeholder="رمز عبور قدرتمند" />
                        <button type="button" class="password-toggle" data-toggle-password aria-label="نمایش رمز عبور" aria-pressed="false" data-active="false">
                            <svg aria-hidden="true" data-icon="open" viewBox="0 0 24 24" focusable="false">
                                <path d="M2.5 12c2.5-3.5 5.9-5.5 9.5-5.5S18.5 8.5 21 12c-2.5 3.5-5.9 5.5-9.5 5.5S5 15.5 2.5 12Z" />
                                <circle cx="12" cy="12" r="3.25" />
                            </svg>
                            <svg aria-hidden="true" data-icon="closed" viewBox="0 0 24 24" focusable="false">
                                <path d="M2.5 12c2.5-3.5 5.9-5.5 9.5-5.5S18.5 8.5 21 12c-2.5 3.5-5.9 5.5-9.5 5.5S5 15.5 2.5 12Z" />
                                <path d="M9.5 9.25c.75-.5 1.62-.75 2.5-.75 3 0 5.5 2.5 5.5 2.5-.3.45-.7.99-1.18 1.55" />
                                <path d="M8.45 14.4a3.25 3.25 0 0 0 4.1 4.15" />
                                <line x1="4" y1="4" x2="20" y2="20" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="text-danger small">@ViewData["ErrorMessage"]</div>
                    }
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ثبت‌نام و ادامه</button>
                </form>
                <div class="auth-divider">یا ثبت‌نام با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">✨</span>
                    ثبت‌نام با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>قبلاً حساب ساخته‌ای؟ <a asp-controller="Account" asp-action="Login">ورود به چمدون</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
