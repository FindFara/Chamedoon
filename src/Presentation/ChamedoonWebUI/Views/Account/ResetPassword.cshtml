@model ResetPasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<section class="glass-section auth-section">
    <div class="container">
        <div class="auth-grid">
            <div class="auth-intro text-lg-end">
                <span class="badge">مرحله پایانی</span>
                <h1 class="fw-bold">رمز عبور جدیدت را تعیین کن.</h1>
                <p class="text-muted mb-4">
                    برای امنیت بیشتر از ترکیب حروف بزرگ و کوچک، اعداد و نمادها استفاده کن. پس از ذخیره رمز جدید می‌توانی فوراً وارد حساب شوی.
                </p>
                <ul class="auth-benefits">
                    <li>بازگشت سریع به داشبورد و مسیر مهاجرتی</li>
                    <li>حفظ تنظیمات و مدارک قبلی</li>
                    <li>قابلیت فعال‌سازی ورود دو مرحله‌ای از تنظیمات حساب</li>
                </ul>
            </div>
            <div class="glass-card auth-card">
                <div class="auth-card-header">
                    <h2>ثبت رمز عبور جدید</h2>
                    <p class="glass-helper mb-0">رمز جدید باید حداقل ۸ کاراکتر و ترکیبی از حروف و اعداد باشد.</p>
                </div>
                <form asp-action="ResetPassword" method="post" novalidate>
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />
                    <div class="glass-field">
                        <label asp-for="NewPassword" class="form-label">رمز عبور جدید</label>
                        <input asp-for="NewPassword" type="password" class="form-control glass-input" placeholder="رمز عبور جدید" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>
                    <div class="glass-field">
                        <label asp-for="ConfirmPassword" class="form-label">تکرار رمز عبور</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control glass-input" placeholder="تکرار رمز" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    <button type="submit" class="btn-glass-primary w-100 mt-3">ذخیره رمز جدید</button>
                </form>
                <div class="auth-meta text-center">
                    <span>پس از تغییر رمز می‌توانی از <a asp-controller="Account" asp-action="Login">اینجا وارد شوی</a>.</span>
                </div>
            </div>
        </div>
    </div>
</section>
