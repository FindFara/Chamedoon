@model Chamedoon.Application.Services.Account.Login.ViewModel.LoginUserViewModel
@{
    ViewData["Title"] = "ورود به چمدون";
}

<section class="glass-section auth-section">
    <div class="container">
        <div class="auth-grid">
            <div class="auth-intro text-lg-end">
                <span class="badge">بازگشت به چمدون</span>
                <h1 class="fw-bold">ورود به حساب کاربری و ادامه مسیر مهاجرتی‌ات.</h1>
                <p class="text-muted mb-4">
                    با ورود به حساب می‌توانی روند ارزیابی، مدارک ذخیره‌شده و توصیه‌های هوشمند را ادامه دهی.
                    اگر هنوز حسابی نداری در چند ثانیه می‌توانی ثبت‌نام کنی.
                </p>
                <ul class="auth-benefits">
                    <li>در صورت نیاز به راهنمایی با پشتیبانی در تماس باش.<</li>
                </ul>
            </div>
            <div class="glass-card auth-card">
                <div class="auth-card-header">
                    <h2>ورود به حساب</h2>
                </div>
                <form asp-action="Login" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["LoginNonce"] as string)" />
                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="glass-field">
                        <button type="submit" name="actionType" value="sendCode" class="btn btn-outline-secondary btn-sm float-start mb-2">
                            ارسال کد به ایمیل
                        </button>
                        <label asp-for="VerificationCode" class="form-label">کد تایید</label>
                        <input asp-for="VerificationCode" type="text" class="form-control glass-input" placeholder="کد چهار رقمی" />
                        <span asp-validation-for="VerificationCode" class="text-danger small"></span>
                    </div>
                    <div class="auth-secondary-actions mt-2">
                        <label class="glass-checkbox">
                            <input asp-for="RememberMe" type="checkbox" />
                            <span>مرا به خاطر بسپار</span>
                        </label>
                        <span class="text-muted small">ورود تنها با کد تایید ایمیل انجام می‌شود.</span>
                    </div>
                    @if (ViewBag.InfoMessage != null)
                    {
                        <div class="alert alert-info py-2">@ViewBag.InfoMessage</div>
                    }
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    <button type="submit" name="actionType" value="login" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ورود به چمدون</button>
                </form>
                <div class="auth-divider">یا ورود با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">🔐</span>
                    ورود با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>هنوز عضو نیستی؟ <a asp-controller="Account" asp-action="Register">ثبت‌نام سریع</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
