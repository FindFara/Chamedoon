@model Chamedoon.Application.Services.Account.Login.ViewModel.LoginUserViewModel
@{
    ViewData["Title"] = "ورود به چمدون";
    ViewData["HideChrome"] = true;
    var hasErrors = (ViewData.ModelState?.ErrorCount ?? 0) > 0;
}

<section class="glass-section auth-section auth-section-centered">
    @if (hasErrors)
    {
        <div class="floating-alert" role="alert" aria-live="assertive">
            <div class="floating-alert__box floating-alert__box--error">
                <div class="floating-alert__icon" aria-hidden="true">⚠️</div>
                <div class="floating-alert__content">
                    <p class="floating-alert__title mb-1">خطا در ورود</p>
                    <div class="floating-alert__message" asp-validation-summary="All"></div>
                </div>
                <button type="button" class="floating-alert__close" data-dismiss-alert aria-label="بستن هشدار">✕</button>
            </div>
        </div>
    }
    <div class="auth-abstract-bg" aria-hidden="true">
        <span class="blob blob-1"></span>
        <span class="blob blob-2"></span>
        <span class="grid-pattern"></span>
    </div>
    <div class="container">
        <div class="auth-grid auth-grid-compact auth-grid-single">
            <div class="glass-card auth-card auth-card-compact">
                <div class="auth-card-header text-center">
                    <h2 class="mb-0">ورود به حساب</h2>
                </div>
                <form asp-action="Login" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["LoginNonce"] as string)" />
                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="glass-field">
                        <label asp-for="Password" class="form-label">رمز عبور</label>
                        <input asp-for="Password" type="password" class="form-control glass-input" placeholder="رمز عبور" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="auth-secondary-actions mt-2">
                        <label class="glass-checkbox">
                            <input asp-for="RememberMe" type="checkbox" />
                            <span>مرا به خاطر بسپار</span>
                        </label>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary fw-semibold">فراموشی رمز عبور؟</a>
                    </div>
                    <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ورود به چمدون</button>
                </form>
                <div class="auth-divider">یا ورود با</div>
                <a asp-controller="Account" asp-action="login-google" class="btn-google w-100">
                    <span aria-hidden="true">🔐</span>
                    ورود با حساب گوگل
                </a>
                <div class="auth-meta text-center">
                    <span>هنوز عضو نیستی؟ <a asp-controller="Account" asp-action="Register">ثبت‌نام سریع</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
