@model Chamedoon.Application.Services.Account.Users.ViewModel.ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/UserPanelLayout.cshtml";
    ViewData["Title"] = "ویرایش رمز عبور";
}

@section UserPanelContent {
    <div class="glass-card dashboard-card">
        <h5>تغییر رمز عبور</h5>
        <p class="glass-helper">برای امنیت بیشتر از رمزهای یکتا استفاده کن و آن را با کسی به اشتراک نگذار.</p>
        <form asp-controller="Account" asp-action="ChangePassword" method="post" novalidate>
            <div class="dashboard-form-grid">
                <div class="glass-field">
                    <label asp-for="CurrentPassword" class="form-label">رمز عبور فعلی</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control glass-input" placeholder="رمز فعلی" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>
                <div class="glass-field">
                    <label asp-for="NewPassword" class="form-label">رمز عبور جدید</label>
                    <input asp-for="NewPassword" type="password" class="form-control glass-input" placeholder="رمز جدید" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>
                <div class="glass-field">
                    <label asp-for="RePassword" class="form-label">تکرار رمز جدید</label>
                    <input asp-for="RePassword" type="password" class="form-control glass-input" placeholder="تکرار رمز" />
                    <span asp-validation-for="RePassword" class="text-danger small"></span>
                </div>
            </div>
            <div class="text-danger small" asp-validation-summary="All"></div>
            <button type="submit" class="btn-glass-primary mt-4">ذخیره رمز عبور</button>
        </form>
    </div>
}
