@model ChamedoonWebUI.Models.PhoneLoginViewModel
@{
    ViewData["Title"] = "ورود و ثبت نام با موبایل";
    ViewData["HideChrome"] = true;
    var nonce = ViewData["PhoneLoginNonce"] as string ?? string.Empty;
    var returnUrl = ViewData["ReturnUrl"] as string ?? Url.Action("Index", "Home");
    var hasErrors = (ViewData.ModelState?.ErrorCount ?? 0) > 0;
}
<section class="glass-section auth-section auth-section-centered">
    @if (hasErrors)
    {
        <div class="floating-alert" role="alert" aria-live="assertive" data-auto-dismiss-after="4000">
            <div class="floating-alert__box floating-alert__box--error">
                <div class="floating-alert__icon" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" role="img">
                        <path d="M12 3.5 3.75 19.25c-.47.9.16 1.99 1.16 1.99h14.18c1 0 1.63-1.09 1.16-1.99L12 3.5Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round" />
                        <path d="M12 9v5M12 16.5h.01" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" />
                    </svg>
                </div>
                <div class="floating-alert__content">
                    <p class="floating-alert__title mb-1">خطا در ورود</p>
                    <div class="floating-alert__message" asp-validation-summary="All"></div>
                </div>
                <div class="floating-alert__timer" aria-hidden="true" data-alert-timer>
                    <svg viewBox="0 0 32 32" role="presentation" focusable="false">
                        <circle class="floating-alert__timer-track" cx="16" cy="16" r="14" />
                        <circle class="floating-alert__timer-progress" cx="16" cy="16" r="14" />
                    </svg>
                </div>
                <button type="button" class="floating-alert__close" data-dismiss-alert aria-label="بستن هشدار">✕</button>
            </div>
        </div>
    }
    <div class="auth-abstract-bg" aria-hidden="true">
        <span class="blob blob-1"></span>
        <span class="blob blob-2"></span>
        <span class="grid-pattern"></span>
    </div>
    <div class="container">
        <div class="auth-grid auth-grid-compact auth-grid-single">
            <div class="glass-card auth-card auth-card-compact">
                <div class="auth-card-header text-center">
                    <div class="auth-card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
                            <path d="M7 3h10a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2Z" stroke="currentColor" stroke-width="1.6" />
                            <path d="M9 7h6m-6 4h6m-6 4h4" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" />
                        </svg>
                    </div>
                    <h2 class="mb-1">ورود / ثبت‌نام با موبایل</h2>
                    <p class="text-muted mb-0">بدون نیاز به رمز عبور، با کد تایید وارد شوید.</p>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.AlertMessage))
                {
                    <div class="alert glass-alert-info" role="alert">@Model.AlertMessage</div>
                }

                <form asp-action="SendPhoneCode" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@nonce" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <div class="glass-field">
                        <label asp-for="PhoneNumber" class="form-label">شماره موبایل</label>
                        <input asp-for="PhoneNumber" class="form-control glass-input" placeholder="مثال: 09123456789" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-glass-primary w-100" data-processing-text="در حال ارسال...">ارسال کد تایید</button>
                </form>

                @if (Model.CodeSent)
                {
                    <div class="auth-divider">ورود با کد تایید</div>
                    <form asp-action="VerifyPhoneCode" method="post" novalidate data-prevent-multi-submit="true">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="requestNonce" value="@nonce" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <input type="hidden" asp-for="PhoneNumber" />
                        <div class="glass-field">
                            <label asp-for="Code" class="form-label">کد تایید</label>
                            <input asp-for="Code" class="form-control glass-input" placeholder="کد ۶ رقمی" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn-glass-success w-100" data-processing-text="در حال تایید...">تایید و ورود</button>
                    </form>
                }

                <div class="auth-meta text-center mt-3">
                    <span>با ارسال کد، قوانین و حریم خصوصی چمدون را می‌پذیرم.</span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
