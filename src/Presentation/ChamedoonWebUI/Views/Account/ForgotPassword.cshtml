@model Chamedoon.Application.Services.Account.Login.Query.ForgotPasswordQuery
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<section class="glass-section auth-section">
    <div class="container">
        <div class="auth-grid">
            <div class="auth-intro text-lg-end">
                <span class="badge">بازیابی سریع</span>
                <h1 class="fw-bold">لینک بازیابی رمز عبور را دریافت کن.</h1>
                <p class="text-muted mb-4">
                    ایمیل ثبت‌شده‌ات را وارد کن تا لینک تغییر رمز برایت ارسال شود. برای حفظ امنیت حساب، لینک تنها مدت محدودی فعال است.
                </p>
                <ul class="auth-benefits">
                    <li>فرآیند امن و مرحله‌به‌مرحله</li>
                    <li>عدم حذف اطلاعات و پیشرفت‌های ذخیره‌شده</li>
                    <li>امکان تعیین رمز عبور قدرتمند جدید</li>
                </ul>
            </div>
            <div class="glass-card auth-card">
                <div class="auth-card-header">
                    <h2>ارسال لینک بازیابی</h2>
                    <p class="glass-helper mb-0">آدرس ایمیل خود را وارد کن تا مراحل بعدی را در صندوق ورودی دریافت کنی.</p>
                </div>
                <form asp-action="ForgotPassword" method="post" novalidate data-prevent-multi-submit="true">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestNonce" value="@(ViewData["ForgotPasswordNonce"] as string)" />
                    <div class="glass-field">
                        <label asp-for="Email" class="form-label">ایمیل</label>
                        <input asp-for="Email" type="email" class="form-control glass-input" placeholder="example@mail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="text-danger small" asp-validation-summary="All"></div>
                    <button type="submit" class="btn-glass-primary w-100 mt-3" data-processing-text="در حال پردازش...">ارسال لینک</button>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-info mt-3 mb-0">@ViewBag.Message</div>
                }
                <div class="auth-meta text-center">
                    <span>رمز عبورت را پیدا کردی؟ <a asp-controller="Account" asp-action="Login">بازگشت به صفحه ورود</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
